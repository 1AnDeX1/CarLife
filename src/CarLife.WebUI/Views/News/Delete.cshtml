@using CarLife.Application.Dto
@model NewsIndexDto

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Confirm Delete</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
</head>
<body>
    <div class="container">
        <h1 class="my-4">Confirm Delete</h1>
        <p>Are you sure you want to delete the news article "<strong>@Model.Title</strong>"?</p>
        <form asp-action="Delete" asp-route-id="@Model.Id">
            <button type="submit" class="btn btn-danger">Delete</button>
            <a type="button" class="btn btn-secondary" asp-action="Index">Cancel</a>
        </form>
    </div>
</body>
</html>