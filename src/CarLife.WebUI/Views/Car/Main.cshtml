@using CarLife.Application.Dto
@model IEnumerable<CarMainDto>

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Car Catalog</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
</head>
<body>
    <div class="container">
        <h2 class="my-4">Car Catalog</h2>
        <a type="button" class="btn btn-outline-secondary text-white bg-black w-25 nav-link" asp-area="" asp-controller="Car" asp-action="Create">
            Sell Car
        </a>
        <div class="row">
            
            @if (Model != null)
            {
                @foreach (var car in Model)
                {
                    <div class="col-md-4">
                        <div class="card mb-4 shadow-sm">
                            <img src="@car.Photo" alt="@car.Mark @car.Model" class="card-img-top">
                            <div class="card-body">
                                <h5 class="card-title">@car.Mark @car.Model</h5>
                                <p class="card-text">Year: @car.YearOfManufecture.Year</p>
                                <p class="card-text">Price: @car.Price</p>
                                <p class="card-text">Mileage: @car.Mileage</p>
                                <p class="card-text">City: @car.City</p>
                                <button type="button" class="btn btn-primary">Learn More</button>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="col-md-4">
                    <h1>No cars</h1>  
                </div>
            }
        </div>
    </div>
</body>
</html>