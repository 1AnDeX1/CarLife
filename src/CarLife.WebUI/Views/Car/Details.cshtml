@using CarLife.Application
@using CarLife.Application.Dto.Car
@model CarDetailDto

<div class="container">
    <h1 class="my-4">
        @Model.Mark
        <small>@Model.Model</small>
    </h1>
    <div class="row">
        <div class="col-md-8">
            <form asp-controller="Car" asp-action="AddToFavorite" asp-route-id="@Model.Id" method="post">
                <button type="submit" style="border: none; background-color: white">
                    @if (!Model.IsFavorite)
                    {
                        <h1 style="color: grey">&hearts;</h1>
                    }
                    else
                    {
                        <h1 style="color: red">&hearts;</h1>
                    }
                </button>
            </form>

            <img src="@Model.Photo" alt="@Model.Mark @Model.Model" class="img-fluid">
        </div>
        <div class="col-md-4">
            <h3 class="my-3">Car Description</h3>
            <p>@Model.Description</p>
            <h3 class="my-3">Project Details</h3>
            <ul>
                <li>Mark: @Model.Mark</li>
                <li>Model: @Model.Model</li>
                <li>Price: @Model.Price</li>
                <li>Mileage: @Model.Mileage</li>
                <li>YearOfManufecture: @Model.YearOfManufecture</li>
                <li>City: @Model.City</li>
                <li>Colour: @Model.Colour</li>
            </ul>
        </div>
    </div>
    @* <h3 class="my-4">Related Projects</h3>
    <div class="row">
        
    </div> *@
</div>
